<div class="row">
    <div class="col-md-12">
        <h1>Категории блюд</h1>
        <hr>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-12">
        <a href="/categories/add" class="btn btn-success">+ Добавить категорию</a>
    </div>
</div>

{{#if categories.length}}
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Количество блюд</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td><strong>{{this.name}}</strong></td>
                    <td>{{this.description}}</td>
                    <td>
                        <span class="badge bg-info">{{this.dish_count}}</span>
                    </td>
                    <td>
                        <a href="/categories/{{this.id}}/edit" class="btn btn-sm btn-warning">Редактировать</a>
                        <form method="POST" action="/categories/{{this.id}}/delete" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите удалить эту категорию?');">
                            <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
{{else}}
<div class="alert alert-info">
    Категории не найдены. <a href="/categories/add">Добавьте первую категорию</a>.
</div>
{{/if}}
