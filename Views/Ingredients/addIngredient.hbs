<div class="row">
    <div class="col-md-12">
        <h1>Добавить ингредиент</h1>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="POST" action="/ingredients/add">
            <div class="mb-3">
                <label for="name" class="form-label">Название ингредиента *</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
                <label for="unit" class="form-label">Единица измерения *</label>
                <select class="form-select" id="unit" name="unit" required>
                    <option value="">Выберите единицу</option>
                    <option value="г">граммы (г)</option>
                    <option value="мл">миллилитры (мл)</option>
                    <option value="шт">штуки (шт)</option>
                    <option value="л">литры (л)</option>
                    <option value="кг">килограммы (кг)</option>
                </select>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a href="/ingredients" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>
