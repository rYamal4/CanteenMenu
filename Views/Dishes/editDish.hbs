<div class="row">
    <div class="col-md-12">
        <h1>Редактировать блюдо</h1>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form method="POST" action="/dishes/{{dish.id}}/edit">
            <div class="mb-3">
                <label for="name" class="form-label">Название блюда *</label>
                <input type="text" class="form-control" id="name" name="name" value="{{dish.name}}" required>
            </div>

            <div class="mb-3">
                <label for="category_id" class="form-label">Категория *</label>
                <select class="form-select" id="category_id" name="category_id" required>
                    {{#each categories}}
                        <option value="{{this.id}}" {{#if (eq this.id ../dish.category_id)}}selected{{/if}}>
                            {{this.name}}
                        </option>
                    {{/each}}
                </select>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Описание</label>
                <textarea class="form-control" id="description" name="description" rows="3">{{dish.description}}</textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="price" class="form-label">Цена (руб.) *</label>
                    <input type="number" step="0.01" class="form-control" id="price" name="price" value="{{dish.price}}" required>
                </div>

                <div class="col-md-4 mb-3">
                    <label for="weight" class="form-label">Вес (г)</label>
                    <input type="number" class="form-control" id="weight" name="weight" value="{{dish.weight}}">
                </div>

                <div class="col-md-4 mb-3">
                    <div class="form-check mt-4">
                        <input class="form-check-input" type="checkbox" id="is_available" name="is_available" {{#if dish.is_available}}checked{{/if}}>
                        <label class="form-check-label" for="is_available">
                            Доступно для заказа
                        </label>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <h5>Ингредиенты</h5>
                <div id="ingredientsList">
                    {{#each dishIngredients}}
                    <div class="row mb-2 ingredient-row">
                        <div class="col-md-6">
                            <select class="form-select" name="ingredients[{{@index}}][ingredient_id]">
                                <option value="">Выберите ингредиент</option>
                                {{#each ../allIngredients}}
                                    <option value="{{this.id}}" {{#if (eq this.id ../../ingredient_id)}}selected{{/if}}>
                                        {{this.name}} ({{this.unit}})
                                    </option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="col-md-4">
                            <input type="number" step="0.01" class="form-control" name="ingredients[{{@index}}][quantity]" value="{{this.quantity}}" placeholder="Количество">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-sm" onclick="this.parentElement.parentElement.remove()">Удалить</button>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <button type="button" class="btn btn-sm btn-secondary" onclick="addIngredient()">+ Добавить ингредиент</button>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                <a href="/dishes" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

<script>
let ingredientIndex = {{dishIngredients.length}};
const availableIngredients = [
    {{#each allIngredients}}
    { id: {{this.id}}, name: '{{this.name}}', unit: '{{this.unit}}' },
    {{/each}}
];

function addIngredient() {
    const container = document.getElementById('ingredientsList');
    const div = document.createElement('div');
    div.className = 'row mb-2 ingredient-row';
    div.innerHTML = `
        <div class="col-md-6">
            <select class="form-select" name="ingredients[${ingredientIndex}][ingredient_id]">
                <option value="">Выберите ингредиент</option>
                ${availableIngredients.map(ing => `<option value="${ing.id}">${ing.name} (${ing.unit})</option>`).join('')}
            </select>
        </div>
        <div class="col-md-4">
            <input type="number" step="0.01" class="form-control" name="ingredients[${ingredientIndex}][quantity]" placeholder="Количество">
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-danger btn-sm" onclick="this.parentElement.parentElement.remove()">Удалить</button>
        </div>
    `;
    container.appendChild(div);
    ingredientIndex++;
}
</script>
