<div class="row">
    <div class="col-md-12">
        <h1>Корзина</h1>
        <hr>
    </div>
</div>

{{#if cartItems.length}}
<div class="row">
    <div class="col-md-8">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Блюдо</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Сумма</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cartItems}}
                    <tr>
                        <td>
                            <strong>{{this.dish_name}}</strong>
                            {{#unless this.is_available}}
                                <br><span class="badge bg-warning">Недоступно</span>
                            {{/unless}}
                        </td>
                        <td>{{this.price}} руб.</td>
                        <td>
                            <form method="POST" action="/cart/{{this.id}}/update" class="d-inline">
                                <input type="number" name="quantity" value="{{this.quantity}}"
                                       min="1" max="99" class="form-control form-control-sm"
                                       style="width: 80px; display: inline-block;"
                                       onchange="this.form.submit()">
                            </form>
                        </td>
                        <td><strong>{{this.subtotal}} руб.</strong></td>
                        <td>
                            <form method="POST" action="/cart/{{this.id}}/remove" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="mt-3">
            <form method="POST" action="/cart/clear" style="display:inline;"
                  onsubmit="return confirm('Очистить всю корзину?');">
                <button type="submit" class="btn btn-outline-danger">Очистить корзину</button>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Итого</h5>
                <hr>
                <h3>{{total}} руб.</h3>
                <hr>
                <form method="POST" action="/orders/place">
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        Оформить заказ
                    </button>
                </form>
                <a href="/dishes" class="btn btn-outline-primary w-100 mt-2">
                    Продолжить выбор
                </a>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="alert alert-info">
    <h4>Ваша корзина пуста</h4>
    <p>Добавьте блюда из <a href="/dishes">меню</a>, чтобы сделать заказ.</p>
</div>
{{/if}}
